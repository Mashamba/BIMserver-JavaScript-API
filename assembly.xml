<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<formats>
		<format>jar</format>
	</formats>
	<id>bimviews-${pom.version}</id>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>../../output/css</directory>
			<outputDirectory>/css</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>../../output/js</directory>
			<outputDirectory>/js</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>../../output/fonts</directory>
			<outputDirectory>/fonts</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>../../output/img</directory>
			<outputDirectory>/img</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>plugin</directory>
			<outputDirectory>/plugin</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>